<Window x:Class="WpfApp20.Window4"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp20"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
 
        Title="Поставщики" Height="450" Width="800" WindowStyle="None">
    <Grid>
        <ListBox x:Name="listbox1" HorizontalAlignment="Left" Height="209" Margin="470,21,0,0" VerticalAlignment="Top" Width="300" SelectionChanged="listbox1_SelectionChanged"/>
